{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,

    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  
  "include": ["./src/*"]
}
