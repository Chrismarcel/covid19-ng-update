{
  "name": "covid19-report-app",
  "version": "1.0.0",
  "description": "A web app for reporting cases of covid19 in Nigeria",
  "main": "index.js",
  "repository": "git@github.com:Chrismarcel/covid19-report-app.git",
  "author": "Chrismarcel <cmarcelj@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "scrape": "node -r esm server/scraper",
    "watch:client": "parcel src/**/*.html -d dist/client",
    "watch:server": "parcel server/app.js -d dist/server --target node",
    "build:client": "parcel build --no-content-hash src/**/*.html -d dist/client",
    "build:server": "parcel build server/app.js -d dist/server --target node",
    "build": "rimraf dist .cache && yarn build:client && yarn build:server",
    "start:dev": "nodemon dist/server/app",
    "start:prod": "node dist/server/app"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "firebase": "^8.6.8",
    "firebase-admin": "^9.10.0",
    "fs-extra": "^10.0.0",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.2",
    "parcel": "^2.0.0-beta.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.4",
    "react-router-dom": "^5.1.2",
    "react-select": "^4.3.1",
    "react-simple-maps": "^2.3.0",
    "react-tooltip": "^4.1.2",
    "recharts": "^2.0.9",
    "regenerator": "^0.14.4",
    "rimraf": "^3.0.2",
    "socket.io": "^4.1.2",
    "socket.io-client": "^4.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0"
  }
}
